{
    "id": "ControlPanel",
    "type": "Panel",
    "style": {
        "left": 0, "top": 0,
        "width": "120em", "height": "2.0em",
        "z-index": 0,
        "background-color": "#3080e0",
        "font": "consolas 20px normal",
        "border": "#204080 1px outset",
        "padding": "0.1em",
        "background-image": "./res/control-bg.png",
        "background-repeat": "repeat-x repeat-y"
    },
    "item-template": {
        "look": "potmeter",
        "data-type": "float",
        "decimal-digits": 3,
        "step": 0.01,
        "style": {
            "top": "0.1em",
            "align": "center middle",
            "color": "#000000",
            
            "background-color": "#80c0ff",
            "border": "#80c0ff 1px outset",
            "background-image": "./res/control-bg.png",
            "height": "1.4em"
        }
    },
    "layout": {
        "bpml": { "type": "Label",   "style": { "left":  "0.2em", "width": "4.0em", "border": "#204080 1px outset", "background-color":"#3080e0" }, "value": "BPM", "data-type": "string" },
        "bpm":  { "type": "Textbox", "style": { "left":  "4.4em", "width": "5.6em", "border": "#204080 1px inset", "background-color": "#80c0ff", "align": "right middle" }, "min": 60, "max": 160, "step": 0.1, "decimal-digits": 1 },

        "rwd":  { "type": "Button",  "style": { "left": "11.0em", "width": "3.0em" }, "value": "<<", "data-type": "string" },
        "stp":  { "type": "Button",  "style": { "left": "14.4em", "width": "3.0em" }, "value": "■", "data-type": "string" },
        "run":  { "type": "Button",  "style": { "left": "17.6em", "width": "3.0em" }, "value": "►", "data-type": "string" },
        "fwd":  { "type": "Button",  "style": { "left": "21.0em", "width": "3.0em" }, "value": ">>", "data-type": "string" },

        "tckl": { "type": "Label",   "style": { "left": "25.0em", "width": "5.5em", "border": "#204080 1px outset", "background-color":"#3080e0" }, "value": "Ticks", "data-type": "string" },
        "tck":  { "type": "Textbox", "style": { "left": "30.7em", "width": "3.0em", "align": "right middle" }, "value": "0", "data-type": "int", "decimal-digits": 0 },
        "seql": { "type": "Label",   "style": { "left": "34.7em", "width": "9.0em", "border": "#204080 1px outset", "background-color":"#3080e0" }, "value": "Sequence", "data-type": "string" },
        "seq":  { "type": "Textbox", "style": { "left": "44.0em", "width": "3.0em", "align": "right middle" }, "value": "0", "data-type": "int", "min": 0, "max": 10, "step": 1, "decimal-digits": 0 }
    }
}