{
    "id": "ControlPanel",
    "type": "Panel",
    "style": {
        "left": 0, "top": 0,
        "width": "120em", "height": "2.0em",
        "z-index": 0,
        "background-color": "#3080e0",
        "font": "consolas 12px normal",
        "border": "#204080 1px outset",
        "padding": "0.1em",
        "background-image": "./res/control-bg.png",
        "background-repeat": "repeat-x repeat-y"
    },
    "item-template": {
        "look": "potmeter",
        "data-type": "float",
        "decimal-digits": 3,
        "step": 0.01,
        "style": {
            "top": "0.1em",
            "align": "center middle",
            "color": "#000000",
            "font": "consolas 12px normal",
            "background-color": "#80c0ff",
            "border": "#80c0ff 1px outset",
            "background-image": "./res/control-bg.png",
            "height": "1.4em"
        }
    },
    "layout": {
        "bpml": { "type": "Label",   "style": { "left":  "16px", "width": "20px", "border": "none", "background-color":"#3080e0", "align": "right middle" }, "value": "BPM", "data-type": "string" },
        "bpm":  { "type": "Textbox", "style": { "left":  "40px", "width": "48px", "border": "#204080 1px inset", "background-color": "#80c0ff", "align": "right middle" }, "min": 60, "max": 160, "step": 0.1, "decimal-digits": 1 },
        "rwd":  { "type": "Button",  "style": { "left": "112px", "width": "32px" }, "value": "<<", "data-type": "string" },
        "stp":  { "type": "Button",  "style": { "left": "146px", "width": "32px" }, "value": "■", "data-type": "string" },
        "run":  { "type": "Button",  "style": { "left": "180px", "width": "32px" }, "value": "►", "data-type": "string" },
        "fwd":  { "type": "Button",  "style": { "left": "214px", "width": "32px" }, "value": ">>", "data-type": "string" },
        "tckl": { "type": "Label",   "style": { "left": "262px", "width": "32px", "border": "none", "background-color":"#3080e0", "align": "right middle" }, "value": "Ticks", "data-type": "string" },
        "tck":  { "type": "Textbox", "style": { "left": "296px", "width": "32px", "align": "right middle" }, "value": "0", "data-type": "int", "decimal-digits": 0 },
        "seql": { "type": "Label",   "style": { "left": "344px", "width": "64px", "border": "none", "background-color":"#3080e0", "align": "right middle" }, "value": "Sequence", "data-type": "string" },
        "seq":  { "type": "Textbox", "style": { "left": "414px", "width": "32px", "align": "right middle" }, "value": "0", "data-type": "int", "decimal-digits": 0 }
    }
}